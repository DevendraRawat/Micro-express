{
  "name": "article",
  "models": {
    "article": {
      "description": "Represent a single article in the system",
      "fields": [
        {
          "name": "id",
          "type": "uuid"
        },
        {
          "name": "name",
          "type": "string"
        },
        {
          "name": "stock",
          "type": "integer"
        },
        {
          "name": "price",
          "type": "double"
        }
      ]
    },
    "article_form": {
      "description": "The model used to create instances of articles",
      "fields": [
        {
          "name": "name",
          "type": "string"
        },
        {
          "name": "stock",
          "type": "integer"
        },
        {
          "name": "price",
          "type": "double"
        }
      ]
    }
  },
  "resources": {
    "article": {
      "operations": [
        {
          "method": "GET",
          "description": "Get all the articles",
          "responses": {
            "200": {
              "type": "[article]"
            }
          }
        },
        {
          "method": "GET",
          "description": "Get a specific article",
          "path": "/:id",
          "responses": {
            "200": {
              "type": "article"
            },
            "404": {
              "type": "unit"
            }
          }
        },
        {
          "method": "PUT",
          "description": "Update a specific article",
          "path": "/:id",
          "body": {
            "type": "article_form"
          },
          "responses": {
            "200": {
              "type": "article"
            },
            "404": {
              "type": "unit"
            }
          }
        },
        {
          "method": "POST",
          "description": "Create an article",
          "body": {
            "type": "article_form"
          },
          "responses": {
            "201": {
              "type": "article"
            }
          }
        },
        {
          "method": "DELETE",
          "description": "Delete a specific article",
          "path": "/:id",
          "responses": {
            "204": {
              "type": "unit"
            }
          }
        }
      ]
    }
  }
}